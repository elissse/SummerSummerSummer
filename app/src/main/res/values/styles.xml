<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#1B1A1D</item>
    </style>
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Imagine.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="colorPrimary">#1D1A24</item>
        <item name="colorPrimaryVariant">#27262A</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>